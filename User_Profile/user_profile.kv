# [padding_left, padding_top, padding_right, padding_bottom]
#: import utils kivy.utils

<TextInputField@MDTextField>:
    pos_hint: {"center_y": .5}
    line_color_focus: get_color_from_hex("#37BEB0")
    max_text_length: 4
    input_filter: "int"


<AddWeightInfo>:
    orientation: "vertical"
    spacing: "12dp"
    size_hint_y: None
    height: "200sp"
    MDBoxLayout:
        orientation: "vertical"
        md_bg_color: get_color_from_hex("#DBF5F0")
        MDBoxLayout:
            TextInputField:
                id: input_value
                hint_text: "Weight"
            MDDropDownItem:
                id: measurement_value
                text: "Measurement"
                pos_hint: {"center_x": 0.5, "center_y": 0.53}
                on_release: root.weight_measurement_menu.open()


<AddHeightInfo>:
    orientation: "vertical"
    spacing: "12dp"
    size_hint_y: None
    height: "200sp"
    MDBoxLayout:
        orientation: "vertical"
        md_bg_color: get_color_from_hex("#DBF5F0")
        MDBoxLayout:
            TextInputField:
                id: input_value
                hint_text: "Height"
            MDDropDownItem:
                id: measurement_value
                text: "Measurement"
                pos_hint: {"center_x": 0.5, "center_y": 0.53}
                on_release: root.height_measurement_menu.open()


<UserProfile>:
    name: "user_profile"
    MDBoxLayout:
        orientation: "vertical"
        md_bg_color: get_color_from_hex("#37BEB0")
        spacing: 10
        padding: 10
        MDCard:
            radius: 18
            size_hint_y: None
            height: 50
            MDLabel:
                text: root.toolbar_date
                halign: "center"
                bold: True
        MDCard:
            orientation: "vertical"
            md_bg_color: get_color_from_hex("#A4E5E0")
            radius: 18
            padding: 10
            MDBoxLayout:
                orientation: "vertical"
                ScrollView:
                    scroll_timeout: 100
                    MDList:
                        id: user_profile_items
                        spacing: 5
            MDBoxLayout:
                size_hint_y: 0.3
                MDFloatingActionButtonSpeedDial:
                    id: add_profile_info
                    data: root.input_button_data
                    callback: root.callback
                    hint_animation: True
                    rotation_root_button: True
                    right_pad: True
                    bg_hint_color: get_color_from_hex("#37BEB0")[:-1] + [.3]
                    bg_color_stack_button: get_color_from_hex("#37BEB0")
                    bg_color_root_button: get_color_from_hex("#0C6170")
#                    bg_hint_color: get_color_from_hex("#37BEB0")

        # input new info

<UserProfileItem>:
    size_hint_y: None
    height: user_profile_entry.height
    radius: [18]

    MDCard:
        md_bg_color: get_color_from_hex("#DBF5F0")
        radius: 18
        TwoLineIconListItem:
            id: user_profile_entry
            icon_color: get_color_from_hex("#28282B")
            text: root.text
            secondary_text: root.secondary_text
            IconLeftWidget:
                icon: root.icon

        MDBoxLayout:
            size_hint: 0.6, 1
            MDLabel:
                text: root.label_text
                halign: "right"
                padding_x: 30
                bold: True
#: import utils kivy.utils

<GraphSwiperItem>:
    MDCard:
        id: custom_graph_card
        md_bg_color: get_color_from_hex("#DBF5F0")
        radius: 18
        padding: [0, 18, 0, 18]

<ChartsAndGraphs>:
    name: "charts_and_graphs"
    MDBoxLayout:
        orientation: "vertical"
        md_bg_color: get_color_from_hex("#37BEB0")
        spacing: 10
        padding: 10
        MDCard:
            radius: 18
            size_hint_y: None
            height: 50
            MDLabel:
                text: root.toolbar_date
                halign: "center"
                bold: True
        MDCard:
            id: choose_subject_type_graph_card
            orientation: "vertical"
            md_bg_color: get_color_from_hex("#A4E5E0")
            radius: 18
            MDSwiper:
                id: graph_swiper
                width_mult: 0.25
        MDCard:
            orientation: "vertical"
            size_hint: 1, 0.3
            md_bg_color: get_color_from_hex("#A4E5E0")
            radius: 18
            Widget:
            CustomFillRoundFlatIconButton:
                id: date_range_picker
                icon: "calendar-range"
                text: "Select Date Range"
                on_release: root.open_date_picker()
            Widget:
            CustomFillRoundFlatIconButton:
                id: graph_subject_picker
                icon: "text-box-search-outline"
                text: "Graph Subject"
                on_release: root.subject_picker_menu.open()
            Widget:
        CustomFillRoundFlatIconButton:
            icon: "chart-box-plus-outline"
            text: "Create Graph/Chart"
            on_release: root.get_graph_info(root.ids.graph_subject_picker.text)
